#!/usr/bin/env bash

# Check if two input arguments are provided
if [ "$#" -ne 2 ]; then
  echo "Usage: $0 <input_file> <output_file>"  # Corrected the usage message
  exit 1
fi

input_file="$1"
output_file="$2"

# Check if the input file exists
if [ ! -f "$input_file" ]; then
  echo "Input file '$input_file' does not exist."
  exit 1
fi

# Process the input file and format the output
awk -F'[ /]' '{ for (i = 1; i <= NF; i += 4) { print $i, $(i+3) } }' "$input_file" > "$output_file"

# Check if the output file was created
if [ -f "$output_file" ]; then
  echo "Output written to '$output_file'."
else
  echo "Error: Output file was not created."
fi

